{% extends 'base.html.twig' %}

{% block stylesheets %}
    <link href="{{ asset('css/style.css') }}" rel="stylesheet" />
    <link href="{{ asset('css/content.css') }}" rel="stylesheet" />
{% endblock %}
{% block topbar %}
	{{ parent() }}
{% endblock %}
{% block sidebar %}
    <div class="sidebar">
      <a href="/">Home</a>
      <a class="active" href="/view_users">View users</a>
      <a href="register_user">Create user</a>
    </div>
{% endblock %}

{% block mainbody %}
	<div class="mainbody">
			<ul class="responsive-table">
				<li class="table-header">
					<div class="col col-1">ID</div>
					<div class="col col-2">Username</div>
					<div class="col col-3">Email</div>
					<div class="col col-4">Is Active</div>
				</thead>
			    {% for user in users %}
				<li class="table-row">
					<div class="col col-1"><a href="http://localhost:8000/viewuser/{{ user.id }}">{{ user.id }}</a></div>
					<div class="col col-2">{{ user.username }}</div>
					<div class="col col-3">{{ user.email }}</div>
					<div class="col col-4">{{ user.isActive }}</div>
				</li>	
		        {% endfor %}
			</ul>
	</div>
{% endblock mainbody %}
