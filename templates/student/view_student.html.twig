{# templates/registration/register.html.twig #}
{% extends 'base.html.twig' %}

{% block stylesheets %}
    <link href="{{ asset('css/style.css') }}" rel="stylesheet" />
    <link href="{{ asset('css/content.css') }}" rel="stylesheet" />
{% endblock %}
{% block topbar %}
	{{ parent() }}
{% endblock %}

{% block sidebar %}
    <div class="sidebar">
      <a class="active" href="/">Home</a>
      <a href="/student_table">Student Results - Table</a>
      <a href="/chart">Student Results - Chart</a>
      <a href="/manage_users">Manager users</a>
      <a href="/logout">Logout</a>
    </div>
{% endblock %}

{% block mainbody %}
	<div class="mainbody">
	    {{ form_start(form) }}
	        {{ form_row(form.id) }}
            {{ form_row(form.msisdn) }}
            {{ form_row(form.name) }}
            {{ form_row(form.surname) }}
            {{ form_row(form.age) }}
            {{ form_row(form.courseWorkScore) }}
            {{ form_row(form.finalScore) }}
			<button type="submit">Register!</button>
           {{ form_end(form) }}
	</div>
{% endblock mainbody %}

